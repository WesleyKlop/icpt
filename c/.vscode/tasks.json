{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "Make current file",
      "command": "/usr/bin/make",
      "args": ["bin/${fileBasenameNoExtension}"],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}
